# Environment Configuration Template for PS Ticket Process Bot
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control

# JIRA Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=ps-ticket-bot
JIRA_API_TOKEN=your_jira_api_token_here

# Bot Configuration
BOT_WEBHOOK_URL=https://your-bot-domain.com
JIRA_WEBHOOK_SECRET=your_webhook_secret_here

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Message Queue Configuration (Redis example)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development  # development, staging, production

# Security
SECRET_KEY=your_secret_key_here

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL=alerts@your-company.com

# Performance Configuration
WORKER_CONCURRENCY=5
QUEUE_BATCH_SIZE=10
PROCESSING_TIMEOUT=30  # seconds

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_POLLING=false
ENABLE_AI_COMMENTS=true
ENABLE_STATUS_TRANSITIONS=true
ENABLE_NOTIFICATIONS=true
